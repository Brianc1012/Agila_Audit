# ────────────────────────────────
# 🔧 Server Configuration
# ────────────────────────────────
# Frontend (Next.js) Configuration
PORT=4003                       # frontend port
HOST=localhost
BASE_URL=http://localhost:4003  # frontend base URL

# Backend (Express API) Configuration
BACKEND_PORT=4004               # backend port
BACKEND_URL=http://localhost:4004
NEXT_PUBLIC_API_BASE_URL=http://localhost:4004  # frontend access to backend API

# CORS - Allow frontend to access backend API
CORS_ORIGIN=http://localhost:4003  # frontend origin    

# ────────────────────────────────
# 🗄️ Database Connection
# ────────────────────────────────
AUDIT_LOGS_DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@localhost:5432/<DB_NAME>?schema=public"
SHADOW_DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@localhost:5432/<SHADOW_DB_NAME>?schema=public"

# ────────────────────────────────
# 🔐 Security and Auth Config
# ────────────────────────────────
JWT_SECRET=<YOUR_JWT_SECRET>

# Default raw keys for departments (used in seeder)
FINANCE_API_KEY=<FINANCE_DEFAULT_KEY>
HR_API_KEY=<HR_DEFAULT_KEY>
INVENTORY_API_KEY=<INVENTORY_DEFAULT_KEY>
OPERATIONS_API_KEY=<OPERATIONS_DEFAULT_KEY>

# For clarity
SERVICE_NAME=audit-logs-microservice
PRISMA_LOG_LEVEL=info

# ────────────────────────────────
# 🔓 TESTING MODE (Disable Authentication)
# ────────────────────────────────
# Set to 'true' to bypass JWT and API Key authentication for testing
# ⚠️ WARNING: NEVER enable this in production!
DISABLE_AUTH=true

# Mock user credentials when DISABLE_AUTH=true
TEST_USER_ID=test_user_001
TEST_USERNAME=test_admin
TEST_USER_ROLE=SuperAdmin
# Options: SuperAdmin, Finance Admin, Finance Non-Admin, HR Admin, etc.

# Mock service name when DISABLE_AUTH=true
TEST_SERVICE_NAME=finance
# Options: finance, hr, inventory, operations
